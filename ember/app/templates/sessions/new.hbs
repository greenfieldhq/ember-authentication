<h2>Login</h2>

<form {{action "loginUser" on="submit"}} role="form">
  <div class="form-group">
    <label for="exampleInputEmail1">Username or Email</label>
    {{input type="text" value=username_or_email placeholder="Username or Email Address" class="form-control"}}
  </div>

  <div class="form-group">
    <label for="exampleInputEmail1">Password</label>
    {{input type="password" value=password placeholder="Password" class="form-control"}}
  </div>

  <button type="submit" class="btn btn-primary">Submit</button>
</form>
