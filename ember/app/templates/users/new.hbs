<h2>Register</h2>

<form {{action "createUser" on="submit"}} role="form">

  <div {{bind-attr class=":controls errors.name:error"}} class="form-group">
    <label>Full Name</label>
    {{input type="text" value=name placeholder="Full Name" class="form-control"}}
    <small class="below">{{errors.name}}</small>
  </div>

  <div {{bind-attr class=":controls errors.email:error"}} class="form-group">
    <label>Email Address</label>
    {{input type="email" value=email placeholder="Email Address" class="form-control"}}
    <small class="below">{{errors.email}}</small>
  </div>

  <div {{bind-attr class=":controls errors.username:error"}} class="form-group">
    <label>Username</label>
    {{input type="text" value=username placeholder="Username" class="form-control"}}
    <small class="below">{{errors.username}}</small>
  </div>

  <div {{bind-attr class=":controls errors.password:error"}} class="form-group">
    <label>Password</label>
    {{input type="password" value=password placeholder="Password" class="form-control"}}
    <small class="below">{{errors.password}}</small>
  </div>

  <div {{bind-attr class=":controls errors.password_confirmation:error"}} class="form-group">
    <label>Confirm Password</label>
    {{input type="password" value=password_confirmation placeholder="Confirm Password" class="form-control"}}
    <small class="below">{{errors.password_confirmation}}</small>
  </div>

  <button type="submit" class="btn btn-primary">Submit</button>
</form>
